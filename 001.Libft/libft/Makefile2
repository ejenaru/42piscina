CC = gcc

FLAGS = -Wall -Wextra -Werror

NAME = libft.a

MAIN = main.c

DIR = ./src/

SRCS = ft_atoi.c 

OBJ = $(SRC:.c=.o) #los objetos que necesito para compilar el main son los .c pero con .o

HEADER = libft.h #la librer√≠a propiamente dicha

all: $(NAME)

$(NAME): $(MAIN) $(OBJ)#crea el objeto libft.a compilando el header y los objetos
	$(CC) $(FLAGS) -o $(NAME) -I $(HEADER) $(MAIN) $(OBJ)
	ar rcs
	ranlib

clean:
	rm -rf $(OBJ)

fclean:
	rm -rf $(NAME)
	
re: fclean all

main:
	$(CC) $(FLAGS) $(MAIN) $(DIR)$(SRCS) && ./a.out

.PHONY: clean fclean all main